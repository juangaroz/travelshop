  "mainFeatures": {
    "aiTravelAssistant": {
      "location": "/components/AITravelAssistant.tsx",
      "description": "Asistente AI conversacional que ayuda a encontrar tours perfectos",
      "capabilities": [
        "Conversación inteligente paso a paso",
        "Preguntas sobre destino, número de personas, tipo de viaje y presupuesto",
        "Sistema de scoring inteligente para matching de tours",
        "Garantiza mostrar siempre al menos 3 tours recomendados",
        "Tarjetas visuales de tours con imágenes, precios y detalles",
        "Quick replies interactivos",
        "Animaciones de 'escribiendo' y delays realistas",
        "Integrado en landing page y portal administrativo"
      ],
      "conversationFlow": [
        "1. Saludo inicial y pregunta por destino",
        "2. Destino seleccionado → pregunta cantidad de personas",
        "3. Personas → pregunta tipo de viaje (Cultural, Playa, Aventura, Ciudad)",
        "4. Tipo de viaje → pregunta presupuesto (Económico, Medio, Alto)",
        "5. Presupuesto → muestra tours recomendados con sistema de scoring"
      ],
      "scoringSystem": {
        "description": "Sistema inteligente que evalúa tours según criterios del usuario",
        "criteria": {
          "destination": "+3 puntos por coincidencia exacta",
          "category": "+2 puntos por coincidencia de tipo de viaje",
          "budget": "+2 puntos si está en rango, +1 si está cerca (20% flexibilidad)"
        },
        "logic": [
          "Exact matches: score >= 5 puntos",
          "Partial matches: score >= 2 puntos",
          "Siempre muestra mínimo 3 tours",
          "Prioriza exact matches, luego partial, luego otros tours"
        ]
      }
    },
    "toursDatabase": {
